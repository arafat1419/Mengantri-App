<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".services.CompanyServiceFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_edit_services"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/dp_16"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_service"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/list_services_company" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_service"
        style="@style/BigButton"
        android:layout_width="match_parent"
        android:text="@string/add_service"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>